<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.JobDetail">

    <TextView
        android:id="@+id/detailTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="20dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="companyName"
        android:layout_margin="10dp"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/detailTitleTv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/jobHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="full time"
        android:layout_margin="10dp"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/companyName"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/jobRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job role"
        android:layout_margin="10dp"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/jobHours"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/noOfOpeningsLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/jobRole"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. of openings"
            android:textSize="16dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/noOfOpenings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="16dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/salaryLL"
        android:text="Salary"
        android:textSize="16dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/noOfOpeningsLL"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/salaryLL"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact number"
            android:textSize="16dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5253584642384"
            android:textSize="16dp"/>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>